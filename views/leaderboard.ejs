<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/css/userLeaderboard.css">
    <script src="/js/leaderboard.js"></script>
</head>
<body>
<div class="container">
    <h1>Leaderboard</h1>
    <!-- Mostrar los usuarios por medalla -->
    <% Object.keys(leaderboard).forEach(medal => { %>
        <div class="leaderboard-section">
            <h2><%= medal %></h2>
            <table>
                <thead>
                <tr>
                    <th>Rank</th>
                    <th>Username</th>
                    <th>Score</th>
                    <th>Badge</th>
                </tr>
                </thead>
                <tbody>
                <% if (leaderboard[medal].length === 0) { %>
                    <tr>
                        <td colspan="4">No users in this range yet</td>
                    </tr>
                <% } else { %>
                    <% leaderboard[medal].forEach((user, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= user.username %></td>
                            <td><%= user.score %></td>
                            <td><img src="/images/badges/<%= user.badge %>" alt="<%= medal %> Badge" class="badge-img"></td>
                        </tr>
                    <% }); %>
                <% } %>
                </tbody>
            </table>
        </div>
    <% }); %>

    <!-- Descripción de las medallas -->
    <div class="medal-description">
        <div class="user-bar">
            Hello admin! | <a href="/">Electronics Skill Tree</a>
        </div>
        <h1>Range Explanations</h1>
        <table id="range">
            <thead>
            <tr>
                <th>Range</th>
                <th>Badge</th>
                <th>Required Bitpoints</th>
            </tr>
            </thead>
            <tbody id="rangeBody">
            <!-- Las filas se añadirán aquí -->
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
